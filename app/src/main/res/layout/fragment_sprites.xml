<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pokemonDetails.pagerFragments.SpritesFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_15dp">

    <ImageView
        android:id="@+id/sprite_1"
        android:layout_width="@dimen/width_150dp"
        android:layout_height="@dimen/height_150dp"
        android:layout_marginEnd="@dimen/margin_10dp"
        android:layout_marginStart="@dimen/margin_10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/sprite_2"
        android:layout_width="@dimen/width_150dp"
        android:layout_height="@dimen/height_150dp"
        app:layout_constraintStart_toEndOf="@id/sprite_1"
        app:layout_constraintTop_toTopOf="@id/sprite_1"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/sprite_3"
        android:layout_width="@dimen/width_150dp"
        android:layout_height="@dimen/height_150dp"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_marginStart="@dimen/margin_10dp"
        android:layout_marginEnd="@dimen/margin_10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sprite_1" />

    <ImageView
        android:id="@+id/sprite_4"
        android:layout_width="@dimen/width_150dp"
        android:layout_height="@dimen/height_150dp"
        app:layout_constraintStart_toEndOf="@id/sprite_3"
        app:layout_constraintTop_toTopOf="@id/sprite_3"
        app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>